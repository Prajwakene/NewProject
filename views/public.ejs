<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Data Display</title>
    <!-- Add any CSS styles or external libraries you need -->
</head>
<body>
    <h1>Data Display</h1>
    <div id="data-container">
        <!-- Data will be displayed here -->
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/socket.js"></script>
    <script>
        const dataContainer = document.getElementById('data-container');

        // Function to display data received from the server
        function displayData(data) {
            const dataElement = document.createElement('div');
            dataElement.innerText = JSON.stringify(data);
            dataContainer.appendChild(dataElement);
        }

        // Socket.io connection
        const socket = io();

        socket.on('data', (data) => {
            // Decrypt and display the data here
            // You'll need to use the same decryption logic as in the server
            const decryptedData = JSON.parse(data);
            displayData(decryptedData);
        });
    </script>
</body>
</html>
